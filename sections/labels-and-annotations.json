{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Object for labels and annotations.",
    "description": "Information for nucleotide labeling and annotation.",
    "id": "labels-and-annotations.json#",
    "type": "object",
    "required": ["resId", "labelLine", "labelContent"],
    "additionalProperties": false,
    "properties": {
        "resId": {
            "type": "integer"
        },
        "labelLine": {
            "type": "object",
            "required": ["x1", "x2", "y1", "y2", "strokeWidth", "color"],
            "additionalProperties": false,
            "properties": {
                "x1": {
                    "type": "number"
                },
                "x2": {
                    "type": "number"
                },
                "y1": {
                    "type": "number"
                },
                "y2": {
                    "type": "number"
                },
                "strokeWidth": {
                    "type": "number",
                    "minimum": 0
                },
                "color": {
                    "$ref": "color.json#"
                }
            }
        },
        "labelContent": {
            "type": "object",
            "required": ["label", "x", "y", "color"],
            "additionalProperties": false,
            "properties": {
                "label": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "color": {
                    "$ref": "color.json#"
                }
            }
        }
    }
}