{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Object for nucleotide labels.",
    "description": "Information for nucleotide labeling.",
    "id": "labels.json",
    "type": "object",
    "required": ["residueIndex", "labelLine", "labelContent"],
    "additionalProperties": false,
    "properties": {
        "residueIndex": {
            "type": "integer",
            "minimum": 0
        },
        "labelLine": {
            "type": "object",
            "required": ["x1", "x2", "y1", "y2", "classes"],
            "additionalProperties": false,
            "properties": {
                "x1": {
                    "type": "number"
                },
                "x2": {
                    "type": "number"
                },
                "y1": {
                    "type": "number"
                },
                "y2": {
                    "type": "number"
                },
                "classes": {
                    "type": "array",
                    "description": "Defines the color and stroke properties of this line object.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "labelContent": {
            "type": "object",
            "required": ["label", "x", "y", "classes"],
            "additionalProperties": false,
            "properties": {
                "label": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "classes": {
                    "type": "array",
                    "description": "Defines the color and stroke properties of this text object.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}