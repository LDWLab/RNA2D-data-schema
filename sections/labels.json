{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Object for nucleotide labels.",
    "description": "Information for nucleotide labeling.",
    "id": "labels.json",
    "type": "object",
    "required": ["residueIndex", "labelLine", "labelContent"],
    "additionalProperties": false,
    "properties": {
        "residueIndex": {
            "type": "integer",
            "minimum": 0
        },
        "labelLine": {
            "type": "object",
            "required": ["points", "classes"],
            "additionalProperties": false,
            "properties": {
                "points": {
                    "type" : "array",
                    "description": "a list of vertices in a label line",
                    "items" : {
                        "type": "object",
                        "required": ["x", "y"],
                        "additionalProperties": false,
                        "properties": {
                            "x" : {
                                "type": "number"
                            },
                            "y" : {
                                "type": "number"
                            }
                        }
                    }
                },
                "classes": {
                    "type": "array",
                    "description": "Defines the color and stroke properties of this line object.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "labelContent": {
            "type": "object",
            "required": ["label", "x", "y", "classes"],
            "additionalProperties": false,
            "properties": {
                "label": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "classes": {
                    "type": "array",
                    "description": "Defines the color and stroke properties of this text object.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}