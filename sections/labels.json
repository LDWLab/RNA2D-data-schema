{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Object for nucleotide labels.",
    "description": "Information for nucleotide labeling.",
    "id": "labels.json",
    "type": "object",
    "required": ["residueIndex", "labelLine", "labelContent"],
    "additionalProperties": false,
    "properties": {
        "residueIndex": {
            "type": "integer",
            "minimum": 0
        },
        "labelLine": {
            "type": "object",
            "required": ["points"],
            "additionalProperties": false,
            "properties": {
                "points": {
                    "$ref": "http://localhost/poly-line.json"
                },
                "classes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Defines the color and stroke properties of this line object."
                }
            }
        },
        "labelContent": {
            "type": "object",
            "required": ["label", "x", "y"],
            "additionalProperties": false,
            "properties": {
                "label": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "classes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Defines the color and stroke properties of this text object."
                }
            }
        }
    }
}